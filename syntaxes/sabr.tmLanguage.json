{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sabr",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numeric"
		},
		{
			"include": "#char"
		},
		{
			"include": "#preproc"
		},
		{
			"include": "#ident"
		},
		{
			"include": "#class"
		},
		{
			"include": "#token"
		}
	],
	"repository": {
		"comment": {
			"name": "comment",
			"patterns": [
				{
					"name": "comment.line.double-slash.sabr",
					"match": "\\\\.*$"
				},
				{
					"name": "comment.block.sabr",
					"begin": "\\(",
					"end": "\\)(\\s|$)"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sabr",
					"match": "\\b(exit|end|if|else|loop|while|break|continue|switch|case|pass|func|macro|defer|return|struct|member|import|define|eval|concat|2?t(drop|nip|dup|over|tuck|swap|rot))\\b"
				},
				{
					"name": "keyword.operator.sabr",
					"match": "(call|set|\\+|-|\\*|/|%|u/|u%|neg|\\+\\+|--|=|!=|>|>=|<|<=|u>|u>=|u<|u<=|f\\+|f-|f\\*|f/|f%|fneg|f=|f!=|f>|f>=|f<|f<=|&|\\||\\^|~|<<|>>|2?(drop|nip|dup|over|tuck|swap|rot)|alloc|resize|free|allot|fetch|store|s>f|u>f|f>s|f>u|show)(\\s|$)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.sabr",
			"begin": "\"",
			"end": "\"(\\s|$)",
			"patterns": [
				{
					"name": "constant.character.escape.sabr",
					"match": "\\\\."
				}
			]
		},
		"numeric": {
			"patterns": [
				{
					"name": "constant.numeric.sabr",
					"match": "(\\+|-)?\\d+(\\s|$)"
				},
				{
					"name": "constant.numeric.sabr",
					"match": "(\\+|-)?\\.\\d+(e-?\\d+)?(\\s|$)"
				},
				{
					"name": "constant.numeric.sabr",
					"match": "(\\+|-)?\\d+\\.\\d*(e-?\\d+)?(\\s|$)"
				},
				{
					"name": "constant.numeric.sabr",
					"match": "(\\+|-)?(0(x\\h*|o[0-7]*|b[0-1]*))(\\s|$)"
				},
				{
					"name":"invalid.illegal.sabr",
					"match": "(\\+|-)?(0(x\\w*|o\\w*|b\\w*))(\\s|$)"
				},
				{
					"name": "invalid.illegal.sabr",
					"match": "(\\+|-)?\\d+\\.\\d+e\\S*(\\s|$)"
				},
				{
					"name": "invalid.illegal.sabr",
					"match": "(\\+|-)?\\d+\\.\\S*(\\s|$)"
				},
				{
					"name": "invalid.illegal.sabr",
					"match": "(\\+|-)?\\.\\d+\\S+(\\s|$)"
				},
				{
					"name": "invalid.illegal.sabr",
					"match": "(\\+|-)?\\d+\\S+(\\s|$)"
				}
				
			]
		},
		"char": {
			"name": "string.quoted.single.sabr",
			"begin": "'",
			"end": "'(\\s|$)",
			"patterns": [
				{
					"name": "constant.character.escape.sabr",
					"match": "\\\\."
				}
			]
		},
		"preproc": {
			"patterns": [
				{
					"name": "entity.other.sabr",
					"match": "#\\S+(\\s|$)"
				},
				{
					"name": "entity.other.sabr",
					"begin": "{",
					"end": "}(\\s|$)"
				}
			]
		},
		"ident": {
			"patterns": [
				{
					"name": "invalid.illegal.sabr",
					"match": "\\$(\\d|@|\\(|\\)|{|}|#|\\$|\\\\|'\")\\S*(\\s|$)"
				},
				{
					"name": "invalid.illegal.sabr",
					"match": "\\$(\\+|-|\\.)\\d\\S*(\\s|$)"
				},
				{
					"name": "constant.other.sabr",
					"match": "\\$\\S+(\\s|$)"
				}
			]
		},
		"class": {
			"name": "entity.name.class.sabr",
			"match": "\\S+\\.\\S+(\\s|$)"
		},
		"token": {
			"name": "variable.other.sabr",
			"match": "\\S+(\\s|$)"
		}
	},
	"scopeName": "source.sabr"
}